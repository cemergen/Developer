@model Developer.Entity.TaskItem

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="panel panel-info">
    <div class="panel-heading"><h2>Details</h2></div>
    <div class="panel-body"><div>
    <h4>TaskItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>


    </dl>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Reminders of @Html.DisplayFor(model => model.Description)</h4>
        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/Reminders/Index.cshtml", Model.Reminders.Where(n => !n.IsDeleted).OrderBy(n => n.RemindDate), new ViewDataDictionary { { "TaskItemId", Model.Id } })
        </div>
    </div>

   
</div></div>
</div>



<p>
    @Html.ActionLink("Back to List", "Details", "ToDoItems", new { Id = Model.ToDoItem.Id }, new { @class = "btn btn-default" })

</p>
